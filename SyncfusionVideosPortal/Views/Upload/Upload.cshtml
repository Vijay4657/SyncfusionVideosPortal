@model SyncfusionVideosPortal.Models.PlatformModel
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

@section StyleSection
    {
    <style>
        .justify-content-center {
            justify-content: center !important;
            display: flex;
            flex-wrap: wrap;
        }

        .errorLabel {
            color: red;
        }

        .btn:not([class*='primary']):hover {
            border-color: #d3d3d3 !important;
        }
    </style>
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/theme.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/custom.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/stack-interface.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/socicon.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/lightbox.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/flickity.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/iconsmind.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/jquery.steps.css" rel="stylesheet" type="text/css" media="all" />
}

@section ScriptSection{
    <script src="~/Scripts/uploadvideo.js"></script>
}



@section MainSection
    {
    <h2 style="padding-top:45px;text-align:center;font-weight:500;">Upload</h2>

    <div class="tab__content">
            <div class="container">
                <div class="row justify-content-center no-gutters">
                    <div class="col-md-10 col-lg-8">
                        <div class="boxed boxed--border">
                                <div class="col-md-6">
                                    <span>Title:</span>
                                    <input type="text" id="videotitle" class="validate-required">
                                    <label class="errorLabel" id="errortitle"></label>
                                </div>
                                <div class="col-md-6">
                                    <span>Description:</span>
                                    <input type="text" id="videodescription" class="validate-required">
                                    <label class="errorLabel" id="errordescription"></label>
                                </div>
                                <div class="col-sm-6" style="padding-left:0">
                                    <span>Platform:</span>
                                    <select id="platforms-filter">
                                        <option>Choose Platforms</option>
                                        @foreach (var platform in Model.PlatformList)
                                        {
                                            if (platform.ShortName != "all")
                                            {
                                                <option value="@platform.ShortName">@platform.PlatformName</option>
                                            }
                                        }

                                    </select>
                                    <label class="errorLabel" id="errorplatform"></label>
                                </div>

                                <div class="col-md-6">
                                    <span>ThumbnailLink:</span>
                                    <input type="tel" id="thumbnailLink" class="validate-required">
                                    <label class="errorLabel" id="errorthumbnail"></label>
                                </div>

                                <div class="col-md-12" style="text-align:left;padding-left:0">
                                    <span>Tags (Enter multiple tags by separating them with commas):</span>
                                    <input type="tel" id="tagLink" class="validate-required">
                                    <label class="errorLabel" id="errortag"></label>
                                </div>

                                <div class="col-md-12" style="text-align:left;padding-left:0">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" id="isfeatureVideo" style="-webkit-appearance:checkbox; width:unset;margin-top:-1px;">IsFeature
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" id="islatestvideo" checked style="-webkit-appearance:checkbox; width:unset;margin-top:-1px;">IsLatest
                                    </label>
                                </div>

                                <div class="col-md-12" style="text-align:left;padding-left:0;padding-top:15px;">

                                    <label class="radio-inline">
                                        <input type="radio" name="existingVideoName" onclick="radiobuttonChange()" id="existingLink" style="-webkit-appearance:radio; width:unset; margin-top:-1px;">Existing
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="existingVideoName" onclick="newradiobuttonChange()" id="newLink" style="-webkit-appearance:radio; width:unset; margin-top:-1px;">New
                                    </label>
                                </div>

                                <div class="col-md-12" id="videoLinkDiv" style="padding-top:30px;display:none;padding-left:0">
                                    <span>Embedded Video Link:</span>
                                    <input type="text" id="existingvideoLink" class="validate-required">
                                    <label class="errorLabel" id="errorvideolink"></label>
                                </div>

                                <div class="col-md-12" id="newviderlinkdiv" style="padding-top:30px;display:none;padding-left:0">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 boxed" style="padding-left:0">
                                    <button class="btn btn--primary type--uppercase" onclick="videoUpload()">Submit</button>
                                </div>

                                <div class="col-md-12">
                                    <label class="errorLabel" id="errorvideo-upload"></label>
                                </div>
                        </div>
                    </div>
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
    </div>
}

